generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lead {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  phone          String   @unique
  alternatePhone String?
  email          String   @unique
  status         String
  qualification  String
  interestField  String
  source         String
  assignedTo     String
  jobInterest    String
  state          String
  city           String
  passoutYear    Int
  heardFrom      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
